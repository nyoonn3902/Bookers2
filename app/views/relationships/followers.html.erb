<h2>Followers</h2>
<% if @users.exists? %>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
          <%= link_to user_followings_path(user) do %>
            <p>フォロー<%= user.followings.count %></p>
          <% end %>
        </td>
        <td>
          <%= link_to user_followers_path(user) do %>
            <p>フォロワー<%= user.followers.count %></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>