<div class = "container px-5 px sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <% if @book.image.attached? %>
        <%= image_tag @book.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <table class = "table">
      <tbody>
        <tr>
          <th>name</th>
          <th>
          </th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </tbody>
      </table>
      <div class = "row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2 class = "mt-3">New book</h2>
      <form action = "/books" accept-charset = "UTF-8" method = "post" >
      <%= form_with model: Book.new do |f| %>
      <div class = "form-group">
        <label for = "book_title">Title</label>
        <p><%= f.text_field :title %></p>
      </div>
      <div class = "form-group">
        <label for = "book_opinion">Opinion</label>
        <p><%= f.text_area :body %></p>
      </div>
      <div class = "form-group">
        <%= f.submit 'Create Book' %>
      </div>
        <% end %>
      </form>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table table-hover table-inverse">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to "edit", edit_book_path, class: "btn btn-sm btn-success " %>
            </td>
            <td>
              <%= link_to "Destroy", books_path, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger " %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
