<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/5f3be3e96e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
      <span>
        <%= link_to "Bookers",root_path %>
      </span>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">


    <% if user_signed_in? %>

      <li>
        <i class="fa-solid fa-house" style="color: #ffffff;"></i>
        <%= link_to "Home", new_user_session_path %>
      </li>
      <li>
        <i class="fa-solid fa-users" style="color: #ffffff;"></i>
        <%= link_to "Users",users_path %>
      </li>
      <li>
        <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
        <%= link_to "Books", books_path %>
      </li>
      <li>
        <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <i class="fa-solid fa-house" style="color: #ffffff;"></i>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <i class="fa-solid fa-link" style="color: #ffffff;"></i>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
        <%= link_to "Log in", user_session_path %>
      </li>
    <% end %>

        </ul>
        </div>

  </header>
    <%= yield %>

    <main>

    </main>







    <footer>
      <div class = "container mt-5">
        <div class="row">
        <div class = "mx-auto">
          <p>CopyRight Infratoop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>

